                cam: htmlDrawable2
            }
        });

	// indicamos el nombre del Target en el Tracker, basicamente al momento de que el Target sea rastreado por el Tracker el objeto htmlDrawable sera renderizado en la pantalla del dispositivo
        var libro3 = new AR.Trackable2DObject(this.tracker, "libro_1322105169", {
            drawables: {
                cam: htmlDrawable3
            }
        });

	// indicamos el nombre del Target en el Tracker, basicamente al momento de que el Target sea rastreado por el Tracker el objeto htmlDrawable sera renderizado en la pantalla del dispositivo
        var libro4 = new AR.Trackable2DObject(this.tracker, "41NCHzVsXTL._SY300_", {
            drawables: {
                cam: htmlDrawable4
            }
        });

